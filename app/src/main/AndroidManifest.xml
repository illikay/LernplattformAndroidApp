<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.kayikci.lernplattform2.activities.QuestionDetailActivity"
                android:exported="true"
                android:label="Question Detailansicht"
                android:theme="@style/AppTheme.NoActionBar"
                android:parentActivityName="com.kayikci.lernplattform2.activities.ExamDetailActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.kayikci.lernplattform2.activities.ExamDetailActivity" />
        </activity>
        <activity
                android:name="com.kayikci.lernplattform2.activities.QuestionCreateActivity"
                android:exported="true"
                android:label="Frage Detailansicht"
                android:parentActivityName="com.kayikci.lernplattform2.activities.ExamDetailActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.kayikci.lernplattform2.activities.ExamDetailActivity" />
        </activity>
        <activity
                android:name="com.kayikci.lernplattform2.activities.ExamListActivity"
                android:exported="true"
                android:label="Prüfungsliste"
                android:parentActivityName="com.kayikci.lernplattform2.activities.WelcomeActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kayikci.lernplattform2.activities.WelcomeActivity"/>
        </activity>

        <activity
                android:name="com.kayikci.lernplattform2.activities.ExamDetailActivity"
                android:exported="true"
                android:label="Prüfung Detailansicht"
                android:parentActivityName="com.kayikci.lernplattform2.activities.ExamListActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.kayikci.lernplattform2.activities.ExamListActivity" />
        </activity>
        <activity
                android:name="com.kayikci.lernplattform2.activities.ExamCreateActivity"
                android:exported="true"
                android:label="Neue Prüfung"
                android:parentActivityName="com.kayikci.lernplattform2.activities.ExamListActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.kayikci.lernplattform2.activities.ExamListActivity" />
        </activity>
        <activity
                android:name="com.kayikci.lernplattform2.activities.WelcomeActivity"
                android:exported="true"
                android:label="Lernplattform"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>